<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_for_checkbox"
                android:checked="true"
                android:paddingLeft="15dp"
                android:text="使用selector替换CheckBox图标" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/selector_for_line_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="竖线（无法使用View实现）" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/shape_for_line_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="横线（无法使用View实现）" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_base"
                android:padding="16dp"
                android:text="使用圆角8dp，描边边框" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_item_shape"
                android:onClick="tvOnClicker"
                android:padding="16dp"
                android:text="使用 selector+item+space点击背景状态+（selector-color）实现文字点击效果 (隐形调用点击事件)"
                android:textColor="@color/selector_color" />


            <TextView
                android:id="@+id/tv_code_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:onClick="tvOnClicker"
                android:padding="16dp"
                android:text="java实现背景点击效果" />

            <TextView
                android:id="@+id/tv_code_gradient"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:onClick="tvOnClicker"
                android:padding="16dp"
                android:text="java实现背景渐变效果" />


            <TextView
                android:id="@+id/tv_get_screen_dispaly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:minHeight="48dp"
                android:onClick="tvGetScreenDisplay"
                android:padding="16dp"
                android:text="获取屏幕尺寸" />

            <TextView
                android:id="@+id/tv_2_auto_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:minHeight="48dp"
                android:onClick="tv2AutoSize"
                android:padding="16dp"
                android:text="跳转AutoSize" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>